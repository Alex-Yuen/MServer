// 系统模块 协议定义

/* 服务器注册 */
table ssregister
{
    name:string;         // 服务器名字
    session:int;         // 服务器session id
    timestamp:int;       // 时间戳
    auth:string;         // 认证字符串
    clt_cmd:[int];       // 该服务器处理的客户端指令
    srv_cmd:[int];       // 该服务器处理的服务器指令
    rpc_cmd:[string];    // 该服务器处理的rpc指令
}

/* 服务器心跳 */
struct ssbeat
{
    response:bool;
}

/* 热更 */
table sshot_swap
{
    module:[string]; // 需要热更的模块
}